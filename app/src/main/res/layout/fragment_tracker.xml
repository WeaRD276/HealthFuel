<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/food_diary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Щоденник харчування"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/food_mass_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Маса продукту (г)"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/food_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Додати продукт"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/add_food_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Додати продукт"
            android:textColor="@color/colorBackground"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/food_summary_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Підсумок харчування"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/exercise_logging_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Облік фізичної активності"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/exercise_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Додати вправу"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/exercise_duration_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тривалість (хв)"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/calories_burnt_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Спалені калорії"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/add_exercise_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Додати вправу"
            android:textColor="@color/colorBackground"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/exercise_summary_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Підсумок активності"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/progress_tracking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Відстеження прогресу"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/progress_summary_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загальний прогрес"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>
</ScrollView>
